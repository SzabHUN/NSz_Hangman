<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crumpedpaperbackgroundflipped"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/TV_AB_CRDS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Crds"
        android:textAlignment="center"
        android:textColor="@color/TextColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/ImgV_SzabHUN"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/szabhun" />

            <TextView
                android:id="@+id/TV_Sz_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sz_n"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_Sz_Tiltle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sz_t"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="14sp" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgV_Sprotni"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/sprotni" />

            <TextView
                android:id="@+id/TV_Sp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Sp_n"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_Sp_Tiltle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sp_t"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/ImgV_Lolly"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/lolly" />

            <TextView
                android:id="@+id/TV_L_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/L_n"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_L_Tiltle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/L_t"
                android:textAlignment="center"
                android:textColor="@color/TextColor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/TV_AB_Desc"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="@string/AB_Desc"
        android:textColor="@color/TextColor" />

</LinearLayout>